@model DestinationDeleteViewModel

@{
    ViewData["Title"] = "Изтриване";
}

<style>
    .delete-box {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        background: rgba(255,255,255,0.88);
        border-radius: 30px;
        box-shadow: 0 20px 45px rgba(150,0,0,0.18);
        animation: fadeIn .6s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-danger-custom {
        background: #d9534f;
        border: none;
        padding: 10px 20px;
        border-radius: 12px;
        color: white;
        font-weight: 700;
    }

        .btn-danger-custom:hover {
            background: #c34541;
        }

    .btn-cancel {
        background: #8aa69d;
        padding: 10px 20px;
        border: none;
        border-radius: 12px;
        color: white;
        font-weight: 700;
    }

        .btn-cancel:hover {
            background: #7a948b;
        }

</style>

<div class="delete-box">

    <h2 class="text-center mb-3">🗑 Изтриване на дестинация</h2>
    <hr />

    <h3 class="text-center">@Model.Name</h3>

    <p class="mt-3"><strong>Публикувал:</strong> @Model.Publisher</p>

    <p class="text-danger mt-3">
        Сигурни ли сте, че искате да изтриете <strong>@Model.Name</strong>?
    </p>

    <div class="d-flex justify-content-between mt-4">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn-danger-custom">
                Потвърди изтриване
            </button>
        </form>

        <a asp-action="Details" asp-route-id="@Model.Id" class="btn-cancel">
            Отказ
        </a>
    </div>
</div>
